<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_options"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.isengrim.project.numbers">


    <Button
        android:id="@+id/bl9"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="9"
        android:layout_alignBaseline="@+id/bl3"
        android:layout_alignBottom="@+id/bl3"
        android:layout_toRightOf="@+id/bl6"
        android:layout_toEndOf="@+id/bl6" />

    <Button
        android:id="@+id/bl12"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="12"
        android:layout_alignBaseline="@+id/bl9"
        android:layout_alignBottom="@+id/bl9"
        android:layout_toRightOf="@+id/bl9"
        android:layout_toEndOf="@+id/bl9" />

    <Button
        android:id="@+id/bl20"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="20"
        android:layout_alignBaseline="@+id/bl12"
        android:layout_alignBottom="@+id/bl12"
        android:layout_toRightOf="@+id/bl12"
        android:layout_toEndOf="@+id/bl12" />

    <Button
        android:id="@+id/bl3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:text="3"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/bl6"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/bl3"
        android:layout_alignBottom="@+id/bl3"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@+id/bl3"
        android:layout_toRightOf="@+id/bl3"
        android:text="6" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Początkowa długość ciągu"
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline" />
</RelativeLayout>
